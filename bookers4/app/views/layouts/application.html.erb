<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <%= csrf_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <title>Bookers</title>
  </head>
<body>

<nav class="navbar navbar-default navbar-fixed-top header-menu" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="">Bookers</a>
    </div>
    <div class="collapse navbar-collapse header-side-menu">
      <ul class="nav navbar-nav">
        <% if user_signed_in? %>
        <li>
          <%= link_to books_path, class: "home" do %>
          <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home
          <% end %>
        </li>
        <li>
          <%= link_to users_path, class: "users" do %>
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Users
          <% end %>
        </li>
        <li>
           <%= link_to books_books_page_path, class: "books" do %>
            <span class="glyphicon glyphicon-book" aria-hidden="true"></span> Books
           <% end %>
        <li>
          <%= link_to destroy_user_session_path, class: "logout", method: :delete do %>
            <span class="glyphicon glyphicon-hand-down" aria-hidden="true"></span> logout
          <% end %>
        </li>
        <% else %>
        <li>
          <%= link_to root_path, class: "home" do %>
          <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home
          <% end %>
        </li>
        <li>
          <%= link_to top_about_path, class: "about" do %>
          <span class="glyphicon glyphicon-globe" aria-hidden="true"></span> About
          <% end %>
        </li>
        <li>
          <%= link_to new_user_registration_path, class: "sign_up" do %>
          <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span> sign up
          <% end %>
        </li>
        <li>
          <%= link_to new_user_session_path, class: "sign_in" do %>
          <span class="glyphicon glyphicon-save" aria-hidden="true"></span> login
          <% end %>
        </li>
        <% end %>

      </ul>
    </div>
  </div>
</nav>

<%= yield %>

<footer class="footer style-2">
  <p>CopyRight Infratop.inc</p>
</footer>
</body>
</html>
