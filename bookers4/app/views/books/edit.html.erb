<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h2>Editing Book</h2>
			<%= form_for(@book) do |f| %>
			<% if @book.errors.any? %>
				<h3><%= @book.errors.count %> errors have occurred</h3>
				<ul>
					<% @book.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
				</ul>
			<% end %>
			<p>Title<br>
				<%= f.text_field :title, :size=>"100%x20", class: "book_title" %>
			</p>
			<p>Opinion<br>
				<%= f.text_area :opinion, :size=>"100%x5", class: "book_body" %>
			</p>
			<%= f.submit "Update Book", class: "btn-default btn-sm btn-primary btn-block" %>
			<% end %>
			<%= link_to "Show", book_path, class: "book_#{@book.id}" %> | 
			<%= link_to "Back", books_books_page_path, class: "book_#{@book.id}" %>
		</div>
	</div>
</div>